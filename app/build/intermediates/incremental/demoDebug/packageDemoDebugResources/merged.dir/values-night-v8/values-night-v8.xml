<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="black">#000000</color>
    <color name="gs_body_gray">#D0D0D0</color>
    <color name="gs_card_bg">#2A2A2A</color>
    <color name="gs_forest_green">#0A2A18</color>
    <color name="gs_forest_green_dark">#051508</color>
    <color name="gs_forest_green_light">#0F4C2E</color>
    <color name="gs_gray_light">#2A2A2A</color>
    <color name="gs_green">#0F4C2E</color>
    <color name="gs_nav_active">#E08A1D</color>
    <color name="gs_nav_bg">#0A2A18</color>
    <color name="gs_nav_inactive">#A0A0A0</color>
    <color name="gs_orange">#E08A1D</color>
    <color name="gs_pin_primary">#0F4C2E</color>
    <color name="gs_pin_secondary">#E08A1D</color>
    <color name="gs_pin_tertiary">#F0F0F0</color>
    <color name="gs_search_bg">#2A2A2A</color>
    <color name="gs_soft_beige">#1A1A1A</color>
    <color name="gs_soft_beige_dark">#0F0F0F</color>
    <color name="gs_surface_variant">#333333</color>
    <color name="gs_title_green">#F0F0F0</color>
    <color name="gs_warm_orange">#E08A1D</color>
    <color name="gs_warm_orange_light">#D5953C</color>
    <color name="transparent">#00000000</color>
    <color name="white">#FFFFFF</color>
    <style name="ShapeAppearance.GearSnap.LargeComponent" parent="ShapeAppearance.Material3.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>
    <style name="ShapeAppearance.GearSnap.MediumComponent" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>
    <style name="ShapeAppearance.GearSnap.SmallComponent" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>
    <style name="Theme.GearSnap" parent="Theme.Material3.Dark">
        
        <item name="colorPrimary">@color/gs_forest_green</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/gs_forest_green_light</item>
        <item name="colorOnPrimaryContainer">@color/white</item>

        
        <item name="colorSecondary">@color/gs_warm_orange</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSecondaryContainer">@color/gs_warm_orange_light</item>
        <item name="colorOnSecondaryContainer">@color/gs_forest_green_dark</item>

        
        <item name="colorTertiary">@color/gs_warm_orange</item>
        <item name="colorOnTertiary">@color/white</item>
        <item name="colorTertiaryContainer">@color/gs_warm_orange_light</item>
        <item name="colorOnTertiaryContainer">@color/gs_forest_green_dark</item>

        
        <item name="android:colorBackground">@color/gs_soft_beige</item>
        <item name="colorOnBackground">@color/gs_title_green</item>
        <item name="colorSurface">@color/gs_card_bg</item>
        <item name="colorOnSurface">@color/gs_body_gray</item>
        <item name="colorSurfaceVariant">@color/gs_surface_variant</item>
        <item name="colorOnSurfaceVariant">@color/gs_body_gray</item>

        
        <item name="android:statusBarColor">@color/gs_forest_green_dark</item>
        <item name="android:navigationBarColor">@color/gs_forest_green_dark</item>
        <item name="android:windowLightStatusBar">false</item>

        
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.GearSnap.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.GearSnap.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.GearSnap.LargeComponent</item>
    </style>
    <style name="Widget.GearSnap.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="android:background">@color/gs_nav_bg</item>
        <item name="itemIconTint">@color/gs_nav_selector</item>
        <item name="itemTextColor">@color/gs_nav_selector</item>
        <item name="itemRippleColor">@color/gs_warm_orange_light</item>
        <item name="elevation">8dp</item>
    </style>
    <style name="Widget.GearSnap.Button" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/gs_forest_green</item>
        <item name="cornerRadius">20dp</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="Widget.GearSnap.Button.OutlinedButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textColor">@color/gs_warm_orange</item>
        <item name="strokeColor">@color/gs_warm_orange</item>
        <item name="strokeWidth">2dp</item>
        <item name="cornerRadius">20dp</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="Widget.GearSnap.Button.TextButton" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/gs_warm_orange</item>
        <item name="cornerRadius">20dp</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="Widget.GearSnap.CardView" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@color/gs_card_bg</item>
    </style>
    <style name="Widget.GearSnap.SearchView" parent="Widget.Material3.SearchView">
        <item name="queryBackground">@drawable/gs_search_background</item>
        <item name="android:background">@drawable/gs_search_background</item>
        <item name="cornerRadius">20dp</item>
    </style>
</resources>